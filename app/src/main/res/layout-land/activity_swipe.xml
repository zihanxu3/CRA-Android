<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeActivity">

    <Button
        android:id="@+id/button11"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:onClick="onClickMatched"
        android:text="Matched!"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="10sp"
        app:backgroundTint="@color/design_default_color_secondary"
        app:cornerRadius="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button13"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="25dp"
        android:onClick="onClickNotMatch"
        android:text="Not match!"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="10sp"
        app:backgroundTint="@color/design_default_color_error"
        app:cornerRadius="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="260dp"
        android:text="Level 1"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="10sp"
        app:backgroundTint="@color/design_default_color_secondary_variant"
        app:cornerRadius="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="115dp"
        android:text="120/150 points"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="10sp"
        app:backgroundTint="@color/design_default_color_background"
        app:cornerRadius="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:text="260 stars"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="10sp"
        app:backgroundTint="@color/design_default_color_background"
        app:cornerRadius="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swipe_bar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_pablo" />

    <ImageView
        android:id="@+id/leftImage"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/match_card2" />

    <ImageView
        android:id="@+id/rightImage"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toEndOf="@+id/leftImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/match_card1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Match n' Swipe"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="Choose `Match` if the two cards are related."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rightCard"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bye bye"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rightImage"
        app:layout_constraintEnd_toEndOf="@+id/rightImage"
        app:layout_constraintStart_toStartOf="@+id/rightImage"
        app:layout_constraintTop_toTopOf="@+id/rightImage" />

    <TextView
        android:id="@+id/leftCard"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/leftImage"
        app:layout_constraintEnd_toEndOf="@+id/leftImage"
        app:layout_constraintStart_toStartOf="@+id/leftImage"
        app:layout_constraintTop_toTopOf="@+id/leftImage" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Scores: 10/10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

