<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="99dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swipe_bar" />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="270dp"
        android:text="Level 1"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="120dp"
        android:text="120/150 points"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:text="260 stars"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Match n' Swipe"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="If the two phrases are related to one another, swipe right, otherwise swipe left."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_pablo" />

    <ImageView
        android:id="@+id/leftImage"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/match_card2" />

    <ImageView
        android:id="@+id/rightImage"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toEndOf="@+id/leftImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/match_card1" />

    <TextView
        android:id="@+id/rightCard"
        android:layout_width="133dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Bye bye"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rightImage"
        app:layout_constraintEnd_toEndOf="@+id/rightImage"
        app:layout_constraintStart_toStartOf="@+id/rightImage"
        app:layout_constraintTop_toTopOf="@+id/rightImage" />

    <TextView
        android:id="@+id/leftCard"
        android:layout_width="162dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:text="Good Morning"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/leftImage"
        app:layout_constraintEnd_toEndOf="@+id/leftImage"
        app:layout_constraintStart_toStartOf="@+id/leftImage"
        app:layout_constraintTop_toTopOf="@+id/leftImage" />

</androidx.constraintlayout.widget.ConstraintLayout>