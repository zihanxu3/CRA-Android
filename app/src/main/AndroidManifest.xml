<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crairport">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SpeakingTest"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".BowlingGame"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ChooseGame"
            android:screenOrientation="landscape" />
        <activity android:name=".MatchingGame" />
        <activity
            android:name=".SwipeActivity"
            android:label="@string/title_activity_swipe"
            android:screenOrientation="landscape" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CreateAccountScreen"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>